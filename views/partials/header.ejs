<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" href="/images/logo.png">
  <link rel="stylesheet" href="./css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/all.min.css"
    integrity="sha512-DxV+EoADOkOygM4IR9yXP8Sb2qwgidEmeqAEmDKIOfPRQZOWbXCzLC6vjbZyy0vPisbH2SyW27+ddLVCN+OMzQ=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <title>MealMatrix-header</title>
</head>

<body class="pb-16"> <!-- padding-bottom for bottom navbar -->

  <header class="bg-white shadow-md fixed w-full z-50 top-0">
    <nav class="container mx-auto flex justify-between items-center py-4 px-4">
      <!-- Logo -->
      <div class="flex items-center gap-2">
        <img src="/images/logo.png" alt="MealMatrix Logo" class="h-10">
        <span class="text-2xl font-bold text-orange-600 hidden md:inline">MealMatrix</span>
      </div>

      <!-- Desktop Links -->
      <ul class="hidden md:flex gap-6 text-gray-700 font-medium">
        <li><a href="/" class="hover:text-orange-600">Home</a></li>
        <li><a href="/menu" class="hover:text-orange-600">Menu</a></li>
        <li><a href="/orders" class="hover:text-orange-600">Orders</a></li>
        <li><a href="/services" class="hover:text-orange-600">Services</a></li>
        <li><a href="/about" class="hover:text-orange-600">About</a></li>
        <li><a href="/contact" class="hover:text-orange-600">Contact</a></li>
      </ul>

      <!-- Right Section -->
      <div class="flex items-center gap-4">
        <!-- Search -->
        <form id="siteSearchForm" onsubmit="handleSiteSearch(event)" class="flex w-full max-w-md">
          <input id="siteSearchInput" type="text" placeholder="Search meals..."
            class="flex-grow px-4 py-2 rounded-l-full border border-gray-300 focus:ring-2 focus:ring-orange-300 focus:outline-none transition">
          <button type="submit" class="bg-orange-600 text-white px-4 rounded-r-full hover:bg-orange-700 transition">
            <i class="fa fa-search"></i>
          </button>
        </form>

        <!-- Cart Desktop -->
        <a href="/cart" class="hidden md:block text-xl text-gray-600 hover:text-orange-600">
          <i class="fa-solid fa-cart-shopping"></i>
        </a>

        <!-- Auth Section -->
        <% if (user) { %>
          <!-- If logged in -->
          <div class="relative group hidden md:block">
            <button class="flex items-center gap-2 bg-orange-600 text-white px-4 py-2 rounded-full">
              <i class="fa-solid fa-user"></i>
              <span>
                <%= user.name %>
              </span>
            </button>
            <div
              class="absolute hidden group-hover:block right-0 mt-2 w-40 bg-white shadow-lg rounded-md overflow-hidden">
              <a href="/profile" class="block px-4 py-2 text-gray-700 hover:bg-orange-100">My Profile</a>
              <a href="/orders" class="block px-4 py-2 text-gray-700 hover:bg-orange-100">My Orders</a>
              <a href="/logout" class="block px-4 py-2 text-gray-700 hover:bg-orange-100">Logout</a>
            </div>
          </div>
          <% } else { %>
            <!-- If not logged in -->
            <div class="hidden md:flex gap-2">
              <a href="/login"
                class="px-4 py-2 border border-orange-600 text-orange-600 rounded-full hover:bg-orange-50">Login</a>
              <a href="/register"
                class="px-4 py-2 bg-orange-600 text-white rounded-full hover:bg-orange-700">Register</a>
            </div>
            <% } %>

              <!-- Mobile Hamburger -->
              <button id="mobile-btn" class="md:hidden text-2xl text-gray-600 focus:outline-none">
                <i class="fa-solid fa-bars"></i>
              </button>
      </div>
    </nav>

    <!-- Mobile Menu -->
    <div id="mobile-menu"
      class="md:hidden overflow-hidden max-h-0 bg-white shadow-md border-t border-gray-200 transition-all duration-500">
      <ul class="flex flex-col gap-4 p-4 text-gray-700 font-medium">
        <li><a href="/" class="hover:text-orange-600">Home</a></li>
        <li><a href="/menu" class="hover:text-orange-600">Menu</a></li>
        <li><a href="/services" class="hover:text-orange-600">Services</a></li>
        <li><a href="/orders" class="hover:text-orange-600">Orders</a></li>
        <li><a href="/about" class="hover:text-orange-600">About</a></li>
        <li><a href="/contact" class="hover:text-orange-600">Contact</a></li>

        <% if (user) { %>
          <li><a href="/profile" class="hover:text-orange-600"><i class="fa-solid fa-user"></i> Profile</a></li>
          <li><a href="/orders" class="hover:text-orange-600">My Orders</a></li>
          <li><a href="/logout" class="hover:text-orange-600">Logout</a></li>
          <% } else { %>
            <li><a href="/login" class="hover:text-orange-600">Login</a></li>
            <li><a href="/register" class="hover:text-orange-600">Register</a></li>
            <% } %>
      </ul>
    </div>
  </header>


  <!-- âœ… Bottom Navigation (Mobile Only) -->
  <nav
    class="fixed bottom-0 left-0 w-full bg-white shadow-lg border-t border-gray-200 flex justify-around items-center py-2 md:hidden z-50">

    <a href="/" class="nav-link flex flex-col items-center text-gray-600 hover:text-orange-600" data-page="/">
      <i class="fa-solid fa-house text-lg"></i>
      <span class="text-xs font-semibold"></span>
      <span
        class="text-xs font-semibold relative text-gray-800 after:content-[''] after:absolute after:left-0 after:-bottom-1 after:w-0 after:h-[4px] after:bg-orange-600 after:rounded-t-full hover:after:w-full after:transition-all after:duration-300">
        Home
      </span>
    </a>
    <a href="/menu" class="nav-link flex flex-col items-center text-gray-600 hover:text-orange-600" data-page="menu">
      <i class="fa-solid fa-utensils text-lg"></i>
      <span class="text-xs font-semibold"></span>
      <span
        class="text-xs font-semibold relative text-gray-800 after:content-[''] after:absolute after:left-0 after:-bottom-1 after:w-0 after:h-[4px] after:bg-orange-600 after:rounded-t-full hover:after:w-full after:transition-all after:duration-300">
        Menu
      </span>
    </a>
    <a href="/services" class=" nav-link flex flex-col items-center text-gray-600 hover:text-orange-600"
      data-page="services">
      <i class="fa-solid fa-concierge-bell text-lg"></i>
      <span class="text-xs font-semibold"></span>
      <span
        class="text-xs text-gray-600 font-semibold relative text-gray-800 after:content-[''] after:absolute after:left-0 after:-bottom-1 after:w-0 after:h-[4px] after:bg-orange-600 after:rounded-t-full hover:after:w-full after:transition-all after:duration-300">
        Services
      </span>
    </a>
    <a href="/orders" class=" nav-link flex flex-col items-center text-gray-600 hover:text-orange-600"
      data-page="orders">
      <i class="fa-solid fa-box text-lg"></i>
      <span class="text-xs font-semibold"></span>
      <span
        class="text-xs text-gray-600 font-semibold relative text-gray-800 after:content-[''] after:absolute after:left-0 after:-bottom-1 after:w-0 after:h-[4px] after:bg-orange-600 after:rounded-t-full hover:after:w-full after:transition-all after:duration-300">
        Orders
      </span>
    </a>
    <a href="/cart" class=" nav-link flex flex-col items-center text-gray-600 hover:text-orange-600" data-page="cart">
      <i class="fa-solid fa-cart-shopping"></i>
      <span class="text-xs font-semibold"></span>
      <span
        class="text-xs text-gray-600 font-semibold relative text-gray-800 after:content-[''] after:absolute after:left-0 after:-bottom-1 after:w-0 after:h-[4px] after:bg-orange-600 after:rounded-t-full hover:after:w-full after:transition-all after:duration-300">
        Carts
      </span>
    </a>
    <a href="/contact" class=" nav-link flex flex-col items-center text-gray-600 hover:text-orange-600"
      data-page="contact">
      <i class="fa-solid fa-phone text-lg"></i>
      <span class="text-xs font-semibold"></span>
      <span
        class="text-xs text-gray-600 font-semibold relative text-gray-800 after:content-[''] after:absolute after:left-0 after:-bottom-1 after:w-0 after:h-[4px] after:bg-orange-600 after:rounded-t-full hover:after:w-full after:transition-all after:duration-300">
        Contact
      </span>
      <span class="underline-indicator absolute -bottom-1 left-1/2 transform -translate-x-1/2 w-10 h-1 bg-orange-600 rounded-t-full opacity-0 transition-opacity duration-300"></span>
    </a>
  </nav>

  <script>
    // JS to highlight active nav item
    document.addEventListener("DOMContentLoaded", () => {
      const currentPath = window.location.pathname.toLowerCase();
      const links = document.querySelectorAll(".nav-link");
      //  const underline = link.querySelector(".underline-indicator");

      links.forEach(link => {
        if (currentPath.includes(link.dataset.page)) {
          link.classList.remove("text-gray-600");
          link.classList.add("text-orange-700");
        }


      });
    });
  </script>


  <!-- Search Script -->
  <script>
    function handleSiteSearch(e) {
      e.preventDefault();
      const q = document.getElementById("siteSearchInput").value.trim();
      if (q) {
        window.location.href = "/menu?q=" + encodeURIComponent(q);
      } else {
        window.location.href = "/menu";
      }
    }
  </script>

  <!-- JS for Mobile Menu Toggle -->
  <script>
    const btn = document.getElementById("mobile-btn");
    const menu = document.getElementById("mobile-menu");

    btn.addEventListener("click", () => {
      menu.classList.toggle("max-h-0");
      menu.classList.toggle("max-h-screen");

      const icon = btn.querySelector("i");
      icon.classList.toggle("fa-bars");
      icon.classList.toggle("fa-xmark");
    });
  </script>
</body>

</html>