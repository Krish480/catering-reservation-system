<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <title>Orders - MealMatrix</title>
  <link rel="stylesheet" href="style.css">
</head>
<body>
    
    <!-- Header -->
     <%- include("../partials/header") %>
    <br>
    <br>
     <!-- Orders Section -->
  <section class="py-12 bg-gray-50">
    <div class="container mx-auto text-center">
      <h2 class="text-4xl font-bold text-orange-600 mb-8">My Orders</h2>

      <div class="overflow-x-auto shadow-lg rounded-lg">
        <table class="min-w-full bg-white border border-gray-200 rounded-lg">
          <thead>
            <tr class="bg-orange-100 text-gray-700">
              <th class="py-3 px-4 border">Order ID</th>
              <th class="py-3 px-4 border">Item</th>
              <th class="py-3 px-4 border">Quantity</th>
              <th class="py-3 px-4 border">Price</th>
              <th class="py-3 px-4 border">Status</th>
            </tr>
          </thead>
          <tbody id="orderTable">
            <!-- Orders yahan show honge -->
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <script>
    // Dummy Data (future me JSON/db se ayega)
    const orders = [
      { id: "ORD123", item: "Paneer Butter Masala", qty: 2, price: "₹300", status: "Delivered" },
      { id: "ORD124", item: "Veg Biryani", qty: 1, price: "₹150", status: "Pending" },
      { id: "ORD125", item: "Butter Naan", qty: 4, price: "₹200", status: "Preparing" },
    ];

    const table = document.getElementById("orderTable");

    orders.forEach(order => {
      const row = `
        <tr class="hover:bg-gray-50">
          <td class="py-3 px-4 border">${order.id}</td>
          <td class="py-3 px-4 border">${order.item}</td>
          <td class="py-3 px-4 border">${order.qty}</td>
          <td class="py-3 px-4 border">${order.price}</td>
          <td class="py-3 px-4 border font-semibold ${
            order.status === "Delivered" ? "text-green-600" :
            order.status === "Pending" ? "text-yellow-600" : "text-blue-600"
          }">${order.status}</td>
        </tr>
      `;
      table.innerHTML += row;
    });
  </script>

</body>
</html>