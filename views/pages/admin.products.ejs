<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Admin - Products</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 min-h-screen p-6">
  <div class="max-w-6xl mx-auto">
    <div class="flex justify-between items-center mb-4">
      <h1 class="text-2xl font-bold text-orange-600">Products</h1>
      <div>
        <a href="/admin/products/new" class="bg-green-600 text-white px-4 py-2 rounded">+ Add Product</a>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <% products.forEach(function(p){ %>
        <div class="bg-white p-4 rounded shadow flex gap-4 items-center">
          <img src="<%= p.imageUrl %>" class="w-28 h-20 object-cover rounded"/>
          <div class="flex-1">
            <div class="font-semibold"><%= p.name %></div>
            <div class="text-sm text-gray-500">â‚¹<%= p.price %> <span class="ml-2 text-xs text-indigo-500"><%= p.offer || '' %></span></div>
            <div class="text-sm text-gray-600 mt-2"><%= p.description || '' %></div>
          </div>
          <div class="space-y-2">
            <a href="/admin/products/<%= p.id %>/edit" class="text-sm bg-yellow-400 px-3 py-1 rounded">Edit</a>
            <form method="POST" action="/admin/products/<%= p.id %>/delete" onsubmit="return confirm('Delete this product?')">
              <button class="text-sm bg-red-500 text-white px-3 py-1 rounded">Delete</button>
            </form>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
