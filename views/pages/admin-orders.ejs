<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Admin - Orders</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 min-h-screen p-6">
  <div class="max-w-5xl mx-auto">
    <h1 class="text-2xl text-orange-600 mb-4">Orders</h1>

    <% if (!orders || orders.length === 0) { %>
      <div class="bg-white p-4 rounded shadow">No orders yet.</div>
    <% } else { %>
      <div class="space-y-4">
      <% orders.forEach(function(o){ %>
        <div class="bg-white p-4 rounded shadow flex justify-between items-center">
          <div>
            <div class="font-semibold">Order: <%= o.id %></div>
            <div class="text-sm text-gray-600">Items: <%= (o.items||[]).map(i=>i.name).join(', ') %></div>
            <div class="text-sm text-gray-600">Customer: <%= o.customer?.email || o.customer?.name || 'â€”' %></div>
          </div>
          <div class="text-right space-y-2">
            <div class="font-semibold"><%= o.status || 'Pending' %></div>
            <a href="/admin/orders/<%= o.id %>" class="text-sm text-blue-600">View / Update</a>
          </div>
        </div>
      <% }) %>
      </div>
    <% } %>
  </div>
</body>
</html>
