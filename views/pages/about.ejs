  <!-- Header -->
  <%- include("../partials/header") %>

    <!-- About Section -->
    <br>
    <br>
    <section id="about" class="py-16 bg-gray-50">
      <div class="container mx-auto px-6 md:px-12 lg:px-20 flex flex-col md:flex-row items-center gap-12">

        <!-- Left Side: Image -->
        <div class="md:w-1/2">
